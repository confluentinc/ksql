#!/bin/bash
# (Copyright) [2017 - 2017] Confluent, Inc.

#
# Use shellcheck to lint this file
#

if [ $# -lt 1 ]; 
then
    echo "USAGE: $0 [-daemon] ksql-server.properties"
    exit 1
fi

base_dir=$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )
if [ "$base_dir" = "/" ]; then
    base_dir=""
fi
: "${KSQL_CONFIG_DIR:="$base_dir/config"}"

: "${KSQL_LOG4J_OPTS:=""}"
if [ -z "$KSQL_LOG4J_OPTS" ] && [ -e "$KSQL_CONFIG_DIR/log4j2-rolling.yaml" ]; then
  export KSQL_LOG4J_OPTS="-Dlog4j2.configurationFile=file:$KSQL_CONFIG_DIR/log4j2-rolling.yaml"
fi

EXTRA_ARGS="-name ksql-server -loggc"

if [ -z "$KSQL_OPTS" ]; then
  KSQL_OPTS=-Dksql.server.install.dir=$base_dir
else
  KSQL_OPTS="${KSQL_OPTS} -Dksql.server.install.dir=$base_dir"
fi

export KSQL_OPTS

# Detect FIPS mode from properties file
# Find the properties file from arguments (skip -daemon flag if present)
PROPS_FILE=""
for arg in "$@"; do
  if [ "$arg" != "-daemon" ] && [ -f "$arg" ]; then
    PROPS_FILE="$arg"
    break
  fi
done

# Check if enable.fips=true in the properties file
if [ -n "$PROPS_FILE" ]; then
  if tr -d '\r' < "$PROPS_FILE" 2>/dev/null | grep -v "^[[:space:]]*#" | \
     grep -iq "^[[:space:]]*enable\.fips[[:space:]]*=[[:space:]]*[\"']*true"; then
    export KSQL_FIPS_ENABLED="true"
  fi
fi

exec "$base_dir"/bin/ksql-run-class io.confluent.ksql.rest.server.KsqlServerMain $EXTRA_ARGS "$@"
