    {
      "name": "Null row filter",
      "statements": [
        "CREATE STREAM TEST (ID bigint, THING MAP<VARCHAR, VARCHAR>) WITH (kafka_topic='test_topic', value_format='JSON');",
        "CREATE STREAM S3 as SELECT ID FROM TEST WHERE THING['status']='false';"
