{
  "comments": [
    "Tests covering map creation"
  ],
  "tests": [
    {
      "name": "create map from key/value lists",
      "statements": [
        "CREATE STREAM TEST (ks ARRAY<VARCHAR>, vals ARRAY<INT>) WITH (kafka_topic='test_topic', value_format='JSON');",
        "CREATE STREAM OUTPUT AS SELECT AS_MAP(ks, vals) as m FROM TEST;"
      ],
      "inputs": [
        {"topic": "test_topic", "key": 1, "value": {"ks":  ["a", "b"], "vals":  [1, 2]}, "timestamp": 0},
        {"topic": "test_topic", "key": 1, "value": {"ks":  ["a", "b", "c"], "vals":  [1, 2, 3]}, "timestamp": 0}
      ],
      "outputs": [
        {"topic": "OUTPUT", "key": 1, "value": {"M":  {"a":  1, "b":  2}}, "timestamp": 0},
        {"topic": "OUTPUT", "key": 1, "value": {"M":  {"a":  1, "b":  2, "c":  3}}, "timestamp": 0}
      ]
    }
  ]
}