{
  "comments": [
    "Test cases covering the use of the aggregate STD_DEV_SAMP function"
  ],
  "tests": [
    {
      "name": "std_dev_samp int",
      "statements": [
        "CREATE STREAM TEST (ID BIGINT KEY, VALUE integer) WITH (kafka_topic='test_topic',value_format='AVRO');",
        "CREATE TABLE OUTPUT as SELECT ID, std_dev_samp(value) AS std_dev FROM test group by id;"
      ],
      "inputs": [
        {"topic": "test_topic", "key": 0,"value": {"value": 0}},
        {"topic": "test_topic", "key": 0,"value": {"value": 10}},
        {"topic": "test_topic", "key": 100,"value": {"value": 50}},
        {"topic": "test_topic", "key": 100,"value": {"value": 10}},
        {"topic": "test_topic", "key": 0,"value": {"value": 7}},
        {"topic": "test_topic", "key": 100,"value": {"value": 3}},
        {"topic": "test_topic", "key": 100,"value": {"value": null}},
        {"topic": "test_topic", "key": 0,"value": {"value": 6}}
      ],
      "outputs": [
        {"topic": "OUTPUT", "key": 0,"value": {"STD_DEV": 0.0}},
        {"topic": "OUTPUT", "key": 0,"value": {"STD_DEV": 50.0}},
        {"topic": "OUTPUT", "key": 100,"value": {"STD_DEV": 0.0}},
        {"topic": "OUTPUT", "key": 100,"value": {"STD_DEV": 800.0}},
        {"topic": "OUTPUT", "key": 0,"value": {"STD_DEV": 26.333333333333332}},
        {"topic": "OUTPUT", "key": 100,"value": {"STD_DEV": 643.0}},
        {"topic": "OUTPUT", "key": 100,"value": {"STD_DEV": 643.0}},
        {"topic": "OUTPUT", "key": 0,"value": {"STD_DEV": 17.583333333333332}}
      ]
    },
